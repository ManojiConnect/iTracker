@page
@model WebApp.Pages.Portfolios.EditModel
@{
    ViewData["Title"] = "Edit Portfolio";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1>Edit Portfolio</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" asp-for="Portfolio.Id" />

                        <div class="form-group">
                            <label asp-for="Portfolio.Name">Name</label>
                            <input asp-for="Portfolio.Name" class="form-control" />
                            <span asp-validation-for="Portfolio.Name" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Portfolio.Description">Description</label>
                            <textarea asp-for="Portfolio.Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Portfolio.Description" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Portfolio.InitialValue">Initial Value</label>
                            <input asp-for="Portfolio.InitialValue" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="Portfolio.InitialValue" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-primary">Save</button>
                            <a asp-page="./Details" asp-route-id="@Model.Portfolio.Id" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 