@page
@model WebApp.Pages.Users.CreateModel
@{
    Layout = "_DesktopLayout";
    ViewData["Title"] = "Create User";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="page-title">Create User</h1>
        <a asp-page="./Index" class="btn btn-outline-secondary">
            <i class="material-icons me-1">arrow_back</i>
            Back to List
        </a>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-light py-3">
                    <h5 class="mb-0">User Information</h5>
                </div>
                <div class="card-body">
                    <form method="post" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="UserForm.FirstName" class="form-control" placeholder="First Name" required />
                                    <label asp-for="UserForm.FirstName">First Name</label>
                                    <div class="invalid-feedback">
                                        Please enter a first name.
                                    </div>
                                    <span asp-validation-for="UserForm.FirstName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="UserForm.LastName" class="form-control" placeholder="Last Name" required />
                                    <label asp-for="UserForm.LastName">Last Name</label>
                                    <div class="invalid-feedback">
                                        Please enter a last name.
                                    </div>
                                    <span asp-validation-for="UserForm.LastName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="UserForm.Email" type="email" class="form-control" placeholder="Email" required />
                                    <label asp-for="UserForm.Email">Email</label>
                                    <div class="invalid-feedback">
                                        Please enter a valid email address.
                                    </div>
                                    <span asp-validation-for="UserForm.Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="UserForm.PhoneNumber" class="form-control" placeholder="Phone Number" />
                                    <label asp-for="UserForm.PhoneNumber">Phone Number</label>
                                    <span asp-validation-for="UserForm.PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <select asp-for="UserForm.Role" class="form-select" required>
                                        <option value="">Select Role</option>
                                        <option value="Admin">Administrator</option>
                                        <option value="User">User</option>
                                    </select>
                                    <label asp-for="UserForm.Role">Role</label>
                                    <div class="invalid-feedback">
                                        Please select a role.
                                    </div>
                                    <span asp-validation-for="UserForm.Role" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <select asp-for="UserForm.Language" class="form-select">
                                        <option value="en">English</option>
                                        <option value="fr">French</option>
                                        <option value="es">Spanish</option>
                                    </select>
                                    <label asp-for="UserForm.Language">Language</label>
                                    <span asp-validation-for="UserForm.Language" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="UserForm.Password" type="password" class="form-control" placeholder="Password" required />
                                    <label asp-for="UserForm.Password">Password</label>
                                    <div class="invalid-feedback">
                                        Please enter a password.
                                    </div>
                                    <span asp-validation-for="UserForm.Password" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="UserForm.ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password" required />
                                    <label asp-for="UserForm.ConfirmPassword">Confirm Password</label>
                                    <div class="invalid-feedback">
                                        Please confirm your password.
                                    </div>
                                    <span asp-validation-for="UserForm.ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-floating">
                                <input asp-for="UserForm.ProfileUrl" class="form-control" placeholder="Profile Image URL" />
                                <label asp-for="UserForm.ProfileUrl">Profile Image URL</label>
                                <span asp-validation-for="UserForm.ProfileUrl" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-check form-switch mb-3">
                            <input class="form-check-input" type="checkbox" asp-for="UserForm.IsActive" checked>
                            <label class="form-check-label" asp-for="UserForm.IsActive">Active</label>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-page="./Index" class="btn btn-outline-secondary me-md-2">Cancel</a>
                            <button type="submit" class="btn btn-primary">Create User</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card shadow-sm">
                <div class="card-header bg-light py-3">
                    <h5 class="mb-0">Help</h5>
                </div>
                <div class="card-body">
                    <h6 class="text-muted mb-3">Creating a New User</h6>
                    <p>Users created here will be able to access the system based on their assigned role:</p>
                    <ul>
                        <li><strong>Administrator:</strong> Full access to all system features including user management</li>
                        <li><strong>Regular User:</strong> Standard access to basic features</li>
                    </ul>
                    <hr class="my-3">
                    <p class="small text-muted mb-0">The email address will be used for login credentials and system notifications.</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Bootstrap validation script
        (function () {
            'use strict'

            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            var forms = document.querySelectorAll('.needs-validation')

            // Loop over them and prevent submission
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }

                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
} 