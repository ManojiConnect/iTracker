@page "{id:int?}"
@model WebApp.Pages.Investments.DeleteModel
@{
    ViewData["Title"] = "Delete Investment";
    Layout = "_DesktopLayout";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="page-title">Delete Investment</h1>
        <a asp-page="./Index" class="btn btn-outline-secondary">
            <i class="material-icons fs-5 align-middle">arrow_back</i>
            <span>Back to Investments</span>
        </a>
    </div>
    
    <div class="alert alert-danger">
        <h4>Are you sure you want to delete this investment?</h4>
        <p>This action cannot be undone. All history records associated with this investment will be inaccessible.</p>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Investment Details</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Name</dt>
                        <dd class="col-sm-8">@Model.Investment.Name</dd>
                        
                        <dt class="col-sm-4">Category</dt>
                        <dd class="col-sm-8">@Model.Investment.CategoryName</dd>
                        
                        <dt class="col-sm-4">Portfolio</dt>
                        <dd class="col-sm-8">@Model.Investment.PortfolioName</dd>
                        
                        <dt class="col-sm-4">Initial Investment</dt>
                        <dd class="col-sm-8">$@Model.Investment.TotalInvestment.ToString("N2")</dd>
                        
                        <dt class="col-sm-4">Current Value</dt>
                        <dd class="col-sm-8">$@Model.Investment.CurrentValue.ToString("N2")</dd>
                        
                        <dt class="col-sm-4">Return</dt>
                        <dd class="col-sm-8">
                            <span class="@(Model.Investment.ReturnPercentage >= 0 ? "text-success" : "text-danger")">
                                @(Model.Investment.ReturnPercentage >= 0 ? "+" : "")@Model.Investment.ReturnPercentage.ToString("F2")%
                            </span>
                        </dd>
                        
                        <dt class="col-sm-4">Purchase Date</dt>
                        <dd class="col-sm-8">@Model.Investment.PurchaseDate.ToString("MMM dd, yyyy")</dd>
                    </dl>
                </div>
            </div>
            
            <form method="post">
                <input type="hidden" name="id" value="@Model.Investment.Id" />
                <div class="d-flex">
                    <button type="submit" class="btn btn-danger me-2">
                        <i class="material-icons fs-5 align-middle">delete</i>
                        <span>Delete Investment</span>
                    </button>
                    <a asp-page="./Index" class="btn btn-secondary">
                        <i class="material-icons fs-5 align-middle">cancel</i>
                        <span>Cancel</span>
                    </a>
                </div>
            </form>
        </div>
    </div>
</div> 