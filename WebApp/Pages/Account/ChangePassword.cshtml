@page
@model WebApp.Pages.Account.ChangePasswordModel
@{
    Layout = "_DesktopLayout";
    ViewData["Title"] = "Change Password";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="page-title">Change Password</h1>
        <a href="javascript:history.back()" class="btn btn-outline-secondary">
            <i class="material-icons me-1">arrow_back</i>
            Back
        </a>
    </div>

    <div class="row">
        <div class="col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-light py-3">
                    <h5 class="mb-0">Change Your Password</h5>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.StatusMessage))
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @Model.StatusMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form method="post" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <div class="form-floating">
                                <input asp-for="Input.CurrentPassword" class="form-control" type="password" placeholder="Current Password" required />
                                <label asp-for="Input.CurrentPassword">Current Password</label>
                                <span asp-validation-for="Input.CurrentPassword" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-floating">
                                <input asp-for="Input.NewPassword" class="form-control" type="password" placeholder="New Password" required />
                                <label asp-for="Input.NewPassword">New Password</label>
                                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-floating">
                                <input asp-for="Input.ConfirmPassword" class="form-control" type="password" placeholder="Confirm New Password" required />
                                <label asp-for="Input.ConfirmPassword">Confirm New Password</label>
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Change Password</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 