@page
@model WebApp.Pages.Common.PageNotFoundModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <title>Page Not Found - Investment Tracker</title>
    <link type="text/css" href="../css/styles.min.css" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(135deg, #1a237e 0%, #0d47a1 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0;
            font-family: "Plus Jakarta Sans", sans-serif;
        }
        .page-not-found {
            text-align: center;
            padding: 2rem;
            max-width: 600px;
            width: 100%;
        }
        .page-not-found h1 {
            font-size: 8rem;
            margin: 0;
            background: linear-gradient(135deg, #ffffff 0%, #e3f2fd 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            font-weight: 800;
            line-height: 1;
        }
        .page-not-found h2 {
            font-size: 2rem;
            margin: 1rem 0 2rem;
            color: white;
            font-weight: 600;
        }
        .icon-ec-search {
            font-size: 3rem;
            color: rgba(255,255,255,0.8);
            margin: 1rem 0;
        }
        .ec-secondary-btn {
            display: inline-block;
            background: rgba(255,255,255,0.1);
            border: 2px solid rgba(255,255,255,0.2);
            border-radius: 8px;
            padding: 0.75rem 2rem;
            text-decoration: none;
            transition: all 0.3s ease;
        }
        .ec-secondary-btn:hover {
            background: rgba(255,255,255,0.2);
            transform: translateY(-2px);
            text-decoration: none;
        }
        .bodySmallBold {
            font-weight: 600;
            font-size: 1rem;
        }
        .text-primary-dark {
            color: white !important;
        }
    </style>
</head>

<body>
    <div class="wrapper">
        <main>
            <div class="page-not-found">
                <h1>404</h1>
                <span class="icon-ec-search"></span>
                <h2>Page Not Found</h2>
                <p class="text-white mb-4">The page you're looking for doesn't exist or has been moved.</p>
                <a href="../" class="ec-secondary-btn">
                    <span class="bodySmallBold text-primary-dark">Go Home</span>
                </a>
            </div>
        </main>
    </div>
</body>
</html>
