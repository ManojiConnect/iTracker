@page
@model WebApp.Pages.Common.DisplayMessageModel
@{
    Layout = "~/Pages/Shared/_AuthPagesLayout.cshtml";
}


<h2 style="color:green;text-align:center">@Model.Message ,You will be redirected to the login page after a few seconds.</h2>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        setTimeout(function () {
            window.location.href = '../Auth/Login';
        }, 5000);
    });
</script>