@page
@model WebApp.Pages.AdminToolsModel
@{
    ViewData["Title"] = "Settings";
    Layout = "_Layout";
}

<div class="container-fluid px-4">
    <h1 class="page-title">Settings</h1>
    
    <div class="card">
    
        <div class="card-body">
            @if (!string.IsNullOrEmpty(Model.SuccessMessage))
            {
                <div class="alert alert-success">
                    @Model.SuccessMessage
                </div>
            }
            
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger">
                    @Model.ErrorMessage
                </div>
            }
            
            <form method="post">
                <div class="row">
                    <!-- Currency Settings -->
                    <div class="col-md-6 mb-4">
                        <h6 class="fw-bold border-bottom pb-2 mb-3">Currency Settings</h6>
                        
                        <div class="mb-3">
                            <label for="currencySymbol" class="form-label">Currency Symbol</label>
                            <select class="form-select" id="currencySymbol" asp-for="Settings.CurrencySymbol">
                                <option value="$">$ (US Dollar)</option>
                                <option value="€">€ (Euro)</option>
                                <option value="£">£ (British Pound)</option>
                                <option value="¥">¥ (Japanese Yen)</option>
                                <option value="₹">₹ (Indian Rupee)</option>
                            </select>
                        </div>
                        
                        <div class="mb-3">
                            <label for="decimalSeparator" class="form-label">Decimal Separator</label>
                            <select class="form-select" id="decimalSeparator" asp-for="Settings.DecimalSeparator">
                                <option value=".">. (Period)</option>
                                <option value=",">, (Comma)</option>
                            </select>
                        </div>
                        
                        <div class="mb-3">
                            <label for="thousandsSeparator" class="form-label">Thousands Separator</label>
                            <select class="form-select" id="thousandsSeparator" asp-for="Settings.ThousandsSeparator">
                                <option value=",">, (Comma)</option>
                                <option value=".">. (Period)</option>
                                <option value=" "> (Space)</option>
                            </select>
                        </div>
                        
                        <div class="mb-3">
                            <label for="decimalPlaces" class="form-label">Decimal Places</label>
                            <select class="form-select" id="decimalPlaces" asp-for="Settings.DecimalPlaces">
                                <option value="0">0</option>
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                            </select>
                        </div>
                    </div>
                    
                    <!-- Date & Time Settings -->
                    <div class="col-md-6 mb-4">
                        <h6 class="fw-bold border-bottom pb-2 mb-3">Date & Time Settings</h6>
                        
                        <div class="mb-3">
                            <label for="dateFormat" class="form-label">Date Format</label>
                            <select class="form-select" id="dateFormat" asp-for="Settings.DateFormat">
                                <option value="MM/dd/yyyy">MM/DD/YYYY (US)</option>
                                <option value="dd/MM/yyyy">DD/MM/YYYY (UK/EU)</option>
                                <option value="yyyy-MM-dd">YYYY-MM-DD (ISO)</option>
                            </select>
                        </div>
                        
                        <div class="mb-3">
                            <label for="financialYearStart" class="form-label">Financial Year Start</label>
                            <select class="form-select" id="financialYearStart" asp-for="Settings.FinancialYearStartMonth">
                                <option value="1">January</option>
                                <option value="4">April</option>
                                <option value="7">July</option>
                                <option value="10">October</option>
                            </select>
                        </div>
                    </div>
                    
                    <!-- Investment Settings -->
                    <div class="col-md-6 mb-4">
                        <h6 class="fw-bold border-bottom pb-2 mb-3">Investment Settings</h6>
                        
                        <div class="mb-3">
                            <label for="defaultView" class="form-label">Default Portfolio View</label>
                            <select class="form-select" id="defaultView" asp-for="Settings.DefaultPortfolioView">
                                <option value="list">List View</option>
                                <option value="grid">Grid View</option>
                            </select>
                        </div>
                        
                        <div class="mb-3">
                            <label for="performanceCalculation" class="form-label">Performance Calculation</label>
                            <select class="form-select" id="performanceCalculation" asp-for="Settings.PerformanceCalculationMethod">
                                <option value="simple">Simple Return</option>
                                <option value="annualized">Annualized Return</option>
                            </select>
                        </div>
                    </div>
                    
                    <!-- System Settings -->
                    <div class="col-md-6 mb-4">
                        <h6 class="fw-bold border-bottom pb-2 mb-3">System Settings</h6>
                        
                        <div class="mb-3">
                            <label for="sessionTimeout" class="form-label">Session Timeout (minutes)</label>
                            <input type="number" class="form-control" id="sessionTimeout" asp-for="Settings.SessionTimeoutMinutes" min="5" max="120" />
                        </div>
                        
                        <div class="mb-3">
                            <label for="minPasswordLength" class="form-label">Minimum Password Length</label>
                            <input type="number" class="form-control" id="minPasswordLength" asp-for="Settings.MinPasswordLength" min="6" max="20" />
                        </div>
                    </div>
                </div>
                
                <div class="mt-3">
                    <button type="submit" class="btn btn-primary">Save Settings</button>
                    <button type="reset" class="btn btn-secondary ms-2">Reset</button>
                </div>
            </form>
        </div>
    </div>
</div> 