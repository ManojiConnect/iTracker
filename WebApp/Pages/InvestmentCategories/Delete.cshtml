@page
@model WebApp.Pages.InvestmentCategories.DeleteModel
@{
    ViewData["Title"] = "Delete Investment Category";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1>Delete Investment Category</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h3>Are you sure you want to delete this category?</h3>
                    
                    @if (!ModelState.IsValid)
                    {
                        <div class="alert alert-warning mb-4">
                            <i class="material-icons me-2 align-middle">warning</i>
                            <span class="align-middle">@Html.ValidationMessage("DeleteError")</span>
                        </div>
                    }
                    
                    <div class="alert alert-danger">
                        <h4>@Model.Category.Name</h4>
                        <p>@Model.Category.Description</p>
                    </div>

                    <form method="post">
                        <input type="hidden" asp-for="Category.Id" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a asp-page="Index" class="btn btn-secondary">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 